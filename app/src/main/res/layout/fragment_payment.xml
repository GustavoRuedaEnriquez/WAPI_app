<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".fragments.FragmentPayment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".70"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fragment_payment_name"
                style="@style/EditText_light_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_payment_name_hint"
                android:inputType="textPersonName"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/fragment_payment_card_number"
                style="@style/EditText_light_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_payment_card_hint"
                android:inputType="number"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/fragment_payment_email"
                style="@style/EditText_light_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_payment_email_hint"
                android:inputType="textEmailAddress"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/fragment_payment_pay"
                style="@style/EditText_light_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_payment_pay_hint"
                android:inputType="numberDecimal"
                tools:ignore="Autofill" />

            <RadioGroup
                android:id="@+id/fragment_payment_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/fragment_payment_pay_visa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true"
                    android:text="@string/fragment_payment_pay_visa" />

                <RadioButton
                    android:id="@+id/fragment_payment_pay_mastercard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:buttonTint="@color/colorPrimary"
                    android:text="@string/fragment_payment_pay_mastercard" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30"
            android:orientation="vertical">

            <Button
                android:id="@+id/fragment_payment_pay_button"
                style="@style/custom_light_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/fragment_payment_button_text"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>