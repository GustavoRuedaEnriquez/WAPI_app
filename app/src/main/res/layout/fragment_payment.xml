<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".fragments.FragmentPayment">

        <EditText
            android:id="@+id/fragment_payment_name"
            style="@style/EditText_dark_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_payment_name_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fragment_payment_description"
            style="@style/EditText_dark_style"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="@string/fragment_payment_description_hint"
            android:inputType="text|textMultiLine" />

        <EditText
            android:id="@+id/fragment_payment_amount"
            style="@style/EditText_dark_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_payment_amount_hint"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DD"
                android:id="@+id/fragment_payment_day"
                style="@style/EditText_dark_style"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:id="@+id/fragment_payment_month"
                style="@style/EditText_dark_style"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_payment_year"
                android:hint="YYYY"
                style="@style/EditText_dark_style"
                android:inputType="number"/>


        </LinearLayout>


        <Button
            android:id="@+id/fragment_payment_pay_button"
            style="@style/custom_light_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/fragment_payment_button_text" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
